<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%logger] [%level]: %message%n</pattern>
		</encoder>
	</appender>

	<logger name="br.eti.gm.ifood.suggestion" level="info"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
